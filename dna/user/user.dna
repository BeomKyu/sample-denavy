# FILE: sample-denavy/dna/user/user.dna

<: ../../.denavy/vendor/dna/registry-root.dna

@enum UserStatus
    Active, Banned, Deleted

@entity User
    id: uuid @pk @ro
    name: str @len(2..20)
    email: str @regex("^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$") @unique
    pwd_hash: str @hidden
    status: UserStatus = Active
    created_at: timestamp @auto
